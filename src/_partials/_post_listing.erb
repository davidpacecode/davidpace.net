  <article class="wa-stack wa-gap-s">
    <section class="wa-stack wa-gap-xs">
      <h3 class="wa-heading-m"><a href="#" class="wa-link-plain"><%= post.data.title %></a></h3>
      <div class="wa-cluster wa-caption-xs">
        <wa-format-date
           month="long"
           day="numeric"
           date="<%= post.data.date %>"
         ></wa-format-date>
        <span><%= post.data.duration %></span>
      </div>
      <div class="wa-cluster">
        <% post.data.categories.each do |cat| %>
          <wa-tag size="small" appearance="filled"><%= cat %></wa-tag>
        <% end %>
      </div>
    </section>
    <p>"<%= post.content.to_s[0..150] %>..."</p>
    <div class="wa-cluster">
      <a href="<%= post.relative_url %>" class="wa-cluster wa-gap-2xs"><span>Read More</span><wa-icon name="angle-right"></wa-icon></a>
    </div>  
    <wa-divider></wa-divider>
  </article>

